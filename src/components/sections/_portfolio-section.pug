mixin portfolioSection(type)
    section.portfolio-section
        .container
            .portfolio-section__inner
                .portfolio-section__top
                    .section-title Портфолио
                    a(href="portfolio.html").more-btn Смотреть все
                .portfolio-section__items
                    - var n = 1;
                    while n <= 9
                        include ../_portfilio-item
                        +portfolioItem("portfolio-image", n)
                        - n++;
                if (type === "default")
                    button.btn.btn-primary заказать видеоролик

